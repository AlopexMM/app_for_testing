<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/beer_shop/nav.ejs') %>
    <section class="section">
        <div class="container">
            <div class="box">
                <table class="table is-bordered is-hoverable" id="ticket">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>CÃ³digo</th>
                            <th>Precio</th>
                            <th>Quitar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let total = 0.0 %>
                        <% products.forEach( product => { %>
                            <% total += product.price %>
                            <% const complexId = `${product.id}-${product.name}` %>
                            <tr id="<%= complexId %>">
                                <td><%= product.name %></td>
                                <td><%= product.id %></td>
                                <td><%= product.price %></td>
                                <td>
                                    <button class="button" onclick="deleteItem(this, '<%= complexId %>')">
                                        <i class="fa-thin fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>
                                TOTAL
                            </th>
                            <td id="total">
                                <%= total %>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            
        </div>
    </section>
    <%- include('../partials/footer.ejs') %>
    <script src="js/ticket.js" type="text/javascript"></script>
</body>
</html>