<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/beer_shop/nav.ejs') %>
    <div class="columns">
        <div class="column is-two-thirds">
            <section class="section">
                <div class="container is-max-widescreen">
                    <div class="box">
                        <table class="table is-fullwidth is-hoverable" id="ticket">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Código</th>
                                    <th>Precio</th>
                                    <th>Quitar</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% let total = 0.0 %>
                                <% objects['products'].forEach( product => { %>
                                    <% total += product.price %>
                                    <% const complexId = `${product.id}-${product.name}` %>
                                    <tr id="<%= complexId %>">
                                        <td><%= product.name %></td>
                                        <td><%= product.id %></td>
                                        <td><%= product.price %></td>
                                        <td>
                                            <button class="button" onclick="deleteItem(this, <%= product.price %>)">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="3">
                                        TOTAL
                                    </th>
                                    <td id="total" class="has-text-right">
                                        <%= total %>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </section>
        </div>
        <div class="column">
            <div class="section">
                <div class="container">
                    <div class="box">
                        <div class="media-content">
                            <table class="table">
                                <tr>
                                    <th>Nombre: </th>
                                    <td><%= objects['client'].name %></td>
                                </tr>
                                <tr>
                                    <th>Apellido: </th>
                                    <td><%= objects['client'].lastname %></td>
                                </tr>
                                <tr>
                                    <th>Dirección: </th>
                                    <td><%= objects['client'].address %></td>
                                </tr>
                                <tr>
                                    <th>Código Postal: </th>
                                    <td><%= objects['client'].postalCode %></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
    <%- include('../partials/footer.ejs') %>
    <script src="/js/ticket.js" type="text/javascript"></script>
</body>
</html>